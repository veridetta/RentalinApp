<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:paddingLeft="@dimen/_8sdp"
    android:paddingRight="@dimen/_8sdp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_12sdp"
        android:background="@color/white"
        app:cardBackgroundColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_8sdp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp"
                android:text="Menunggu Konfirmasi"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/orange_500"/>
            <TextView
                android:id="@+id/id_orderan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ord#0093JKT"
                android:padding="@dimen/_6sdp"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/grey_800"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey_400"/>
            <TextView
                android:id="@+id/namaMobil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_6sdp"
                android:text="Pajero Sport"
                android:textStyle="bold"
                android:textSize="@dimen/_13sdp"
                android:textColor="@color/grey_800"/>
            <TextView
                android:id="@+id/cekin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingRight="@dimen/_6sdp"
                android:text="Cek in : 12-09-2020"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/grey_600"/>
            <TextView
                android:id="@+id/cekout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingRight="@dimen/_6sdp"
                android:text="Cek out : 14-09-2020"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/grey_600"/>
            <TextView
                android:id="@+id/supir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingRight="@dimen/_6sdp"
                android:text="Supir : Ahmad Hasbi"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/grey_600"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/grey_400"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingRight="@dimen/_6sdp"
                android:text="Estimasi pendapatan :"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/grey_600"/>
            <TextView
                android:id="@+id/pendapatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingRight="@dimen/_6sdp"
                android:text="Rp. 3.000.000"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/grey_600"/>
            <LinearLayout
                android:id="@+id/ly_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_12sdp"
                android:paddingRight="@dimen/_6sdp"
                android:paddingLeft="@dimen/_6sdp"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/btn_sudah_bayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_6sdp"
                    android:paddingTop="@dimen/_6sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/white"
                    android:background="@color/green_600"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:text="Konfirmasi Pembayaran"/>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>