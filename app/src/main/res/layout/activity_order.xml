<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".layout.MobilFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_200"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/data_ada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:background="@drawable/carbg"
                    android:alpha="0.9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:background="@color/blue_400"
                    android:alpha="0.8"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_80sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:paddingTop="@dimen/_35sdp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="@dimen/_4sdp"
                        app:cardUseCompatPadding="false"
                        app:cardMaxElevation="@dimen/_4sdp"
                        app:cardElevation="@dimen/_2sdp"
                        app:cardBackgroundColor="@color/white">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/white"
                            android:paddingTop="@dimen/_35sdp">
                            <LinearLayout
                                android:id="@+id/layout_login_content"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_18sdp"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Data Booking"
                                        android:textSize="@dimen/_13sdp"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/nama_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_8sdp">
                                    <com.google.android.material.textfield.TextInputLayout
                                        android:id="@+id/nama_input_layout"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                        <com.google.android.material.textfield.TextInputEditText
                                            android:id="@+id/nama"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:inputType="text"
                                            android:maxLines="1"
                                            android:text="Nissan"
                                            android:enabled="false"
                                            android:hint="Nama Mobil"/>
                                    </com.google.android.material.textfield.TextInputLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="10">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="8"
                                        android:orientation="vertical"
                                        android:padding="@dimen/_8sdp">
                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/cekin"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:inputType="date"
                                                android:maxLines="1"
                                                android:enabled="false"
                                                android:hint="Cek In"/>
                                        </com.google.android.material.textfield.TextInputLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:layout_gravity="center"
                                        android:gravity="center">
                                        <ImageView
                                            android:id="@+id/img_cekin"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            android:background="@drawable/plus"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:weightSum="10">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="8"
                                        android:orientation="vertical"
                                        android:padding="@dimen/_8sdp">
                                        <com.google.android.material.textfield.TextInputLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                                            <com.google.android.material.textfield.TextInputEditText
                                                android:id="@+id/cekout"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:inputType="date"
                                                android:maxLines="1"
                                                android:enabled="false"
                                                android:hint="Cek Out"/>
                                        </com.google.android.material.textfield.TextInputLayout>
                                    </LinearLayout>
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="2"
                                        android:layout_gravity="center"
                                        android:gravity="center">
                                        <ImageView
                                            android:id="@+id/img_cekout"
                                            android:layout_width="@dimen/_30sdp"
                                            android:layout_height="@dimen/_30sdp"
                                            android:background="@drawable/plus"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/btn_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="@dimen/_8sdp">
                                    <Button
                                        android:id="@+id/btn_simpan"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/blue_400"
                                        android:text="Selanjutnya"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_14sdp"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_40sdp">
                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:background="@drawable/order"/>
                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</FrameLayout>